dashboard {
	ShortName = "GT-V8_KPH";
	PrettyName = "GT-V8 kph version";
	ImageFile = "images\GT-V8.png"; 
}

gauge {
	channel = "Speed_Kph";
	range = <0,300>;
	position = <362,0>;
	sweep = <225,-45>;
	face_image = "images\GT-V8_Speed_kph.png";
	needle_image = "images\GT-V8_Needle_Speed.png";
	needle_offset = <120,14>;
	draw_face = true;
}

gauge {
	channel = "RPM";
	range = <0,8000>;
	scale = 0.001;
	rectangle = <199,49, 230,230>;
	sweep = <270,60>;
	needle_image = "images\GT-V8_Needle_Tach.png";
	needle_offset = <98,12>;
	draw_face = true;
}
textbox {
	channel="RPM";
	format=real;
	rectangle=<0,0,50,20>;
	foreground=<0,0,0>;
}

