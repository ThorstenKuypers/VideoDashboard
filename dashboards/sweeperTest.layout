dashboard {
	ShortName="GaugesII MPH"; // The name in the dashboard selection list
	PrettyName ="Gauges2"; // An optional descriptive name
	//ImageFile= "D//\Development\Projects\VideoDashboard\bin\Debug\dashboards\images\RedCarbon.png";// The image file used by this dash
	//targetwidth = 1024; // The dash is scaled for a 1024 wide frame
	foreground = <255,255,255>; // default color for text and drawn elements
	fontname = “Arial”; // default font fontheight = 12; // default font size justify = center; // default text justification
	width = 1024;
	height = 300;	
}

sweeper {
	id = "RPM";
	variable = "Brake";
	//rectangle = < 50,50, 200, 200>; //test
	extend = 10;
	taper = 0;
	thickness = 0;
	rgboff = transparent;
	rgbon = <200, 100, 100 >;
	range = <0, 100 >;
	//scale=0.001;
	//sweep = < 1,359 >;
	divisions = 12;
	shape = ellipse;
	path = line;
	line_start = <20,20>;
	line_end =<200,20>;
}

ruler {
  	layer = 1;
  	using = "RPM";
  	draw_path = no;
  	path_color = <0,0,0>;
  	path_offset = 0;
	path_position = below;
  	path_width = 1;

  	draw_major = yes;
  	//major_divisions = 10;
	major_units = 10;
  	major_shape = line;
  	major_length = 10;
  	major_width = 2;
	//major_radius = 10;
  	major_color = <0,0,0>;
	major_margin = 0;
	
	draw_minor = no;
	minor_shape = line;
	//minor_divisions = 1;
	minor_units = 5;
	minor_length = 10;
	minor_width = 2;
	//minor_radius = 3;
	minor_color = <0,0,0>;
	minor_margin = 0;
	
  	draw_label = yes;
  	label_margin = 2;
  	//scale = 0.001;
  	//fontstyle =bold;
  	fontheight = 9;
  	foreground = <0,0,0>;
  
}
